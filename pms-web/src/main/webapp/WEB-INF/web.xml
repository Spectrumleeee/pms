  <!-- spring配置文件位置 -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
        classpath:application.xml
    </param-value>
  </context-param>
  
<!--   <listener> -->
<!--     <description>加载dubbo.properties</description> -->
